{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./",
    "rootDir": "./",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "server/**/*",
    "api/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "src/**/*",
    "node_modules",
    "dist"
  ]
}